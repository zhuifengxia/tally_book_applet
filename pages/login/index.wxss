/* pages/login/index.wxss */
page{
    background-color: white;
}
.container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.logo-img{
    width: 120px;
    height: 60px;
    margin: 50px 0;
}

.login-container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 80%;
}

.login-form{
    width: 100%;
    display: flex;
    flex-direction: column;
}

.login-input{
    border-bottom: 1px solid #f5f5f5;
    line-height: 70px;
    font-size: 13px;
}

.submit-btn{
    margin-top: 20px;
    margin-left: 10px;
    background-color: #389cdb;
    color: white;
}

.login-info{
    display: flex;
    justify-content: center;
    margin-top: 10px;
    font-size: 14px;
}

.login-info text:last-child{
    color: #389cdb;
}