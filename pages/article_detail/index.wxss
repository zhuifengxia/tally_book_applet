@import "../../css/font-awesome.wxss";

.container {
    background-color: white;
    width: 100%;
}

.header {
    width: 95%;
    margin: 0 auto;
    border-bottom: 1px solid #f5f5f5;
}

.title {
    width: 100%;
    text-align: center;
    font-size: 35rpx;
    padding-top: 10rpx;
    font-weight: bold;
}

.art-tag {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 40%;
}

.articlemsg {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 20rpx;
    color: #d2d2d2;
    margin-bottom: 20rpx;
}

.artmsg {
    width: 95%;
    margin: 0 auto;
    padding:5px;
}

.useroperdiv {
    width: 95%;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-bottom: 20rpx;
}

.readnum {
    color: #d2d2d2;
}

.read-calss {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.like {
    margin-left: 30rpx;
}


.operdiv {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 95%;
    margin: 0 auto;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}

.artpingluns {
    width: 95%;
    margin-top: 20rpx;
    margin: 0 auto;
}

.pllstdiv {
    margin-top: 40rpx;
}

.user,
.time-div,
.collect,
.writepldiv {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.author,
.time {
    margin-left: 10rpx;
}

.edit {
    margin-right: 10rpx;
}